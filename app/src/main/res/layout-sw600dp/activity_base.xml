<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseActivity"
    android:orientation="horizontal"
    android:weightSum="3"
    android:id="@+id/layout_tab"
    android:baselineAligned="false">

    <FrameLayout
        android:id="@+id/base_users_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_marginRight="@dimen/standard_5"
        android:layout_marginLeft="@dimen/standard_5"
        android:layout_marginStart="@dimen/standard_5"
        android:layout_marginEnd="@dimen/standard_5"/>

    <FrameLayout
        android:id="@+id/base_tasks_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

</LinearLayout>